{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "react",
      "react-dom",
      "@types/react",
      "@types/react-dom",
      "node_modules/@types",
      "node_modules/@types/*",
      "./global.d.ts",
      "node"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["node_modules", "build", "webpack.*.ts", "*.config.ts"],
  "include": ["src/**/*"] // which files to compile
}
